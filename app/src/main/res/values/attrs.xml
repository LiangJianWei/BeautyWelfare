<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LayoutFromView">
        <attr name="viewType">
            <enum name="edit" value="0" />
            <enum name="text" value="1" />
            <enum name="none" value="2" />
        </attr>

        <attr name="editHint" format="string|reference" />
        <attr name="editText" format="string|reference" />
        <attr name="editTextColor" format="color|reference" />
        <attr name="editHintColor" format="color|reference" />
        <attr name="editTextSize" format="dimension" />
        <attr name="leftText" format="string|reference" />
        <attr name="leftTextColor" format="color|reference" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="rightText" format="string|reference" />
        <attr name="rightTextColor" format="color|reference" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightArrow" format="reference" />
        <attr name="itemColor" format="color|reference" />

    </declare-styleable>
</resources>